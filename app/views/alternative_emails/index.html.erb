<p id="notice"><%= notice %></p>

<h1>Listing Alternative Emails</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alternative_emails.each do |alternative_email| %>
      <tr>
        <td><%= link_to 'Show', alternative_email %></td>
        <td><%= link_to 'Edit', edit_alternative_email_path(alternative_email) %></td>
        <td><%= link_to 'Destroy', alternative_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

