<%- model_class = Name -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first) %></th>
      <th><%= model_class.human_attribute_name(:last) %></th>
      <th><%= model_class.human_attribute_name(:middle) %></th>
      <th><%= model_class.human_attribute_name(:prefix) %></th>
      <th><%= model_class.human_attribute_name(:suffix) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= link_to name.id, name_path(name) %></td>
        <td><%= name.first %></td>
        <td><%= name.last %></td>
        <td><%= name.middle %></td>
        <td><%= name.prefix %></td>
        <td><%= name.suffix %></td>
        <td><%=l name.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_name_path(name), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      name_path(name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_name_path,
            :class => 'btn btn-primary' %>
