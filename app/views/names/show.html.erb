<%- model_class = Name -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first) %>:</strong></dt>
  <dd><%= @name.first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last) %>:</strong></dt>
  <dd><%= @name.last %></dd>
  <dt><strong><%= model_class.human_attribute_name(:middle) %>:</strong></dt>
  <dd><%= @name.middle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prefix) %>:</strong></dt>
  <dd><%= @name.prefix %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suffix) %>:</strong></dt>
  <dd><%= @name.suffix %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              names_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_name_path(@name), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              name_path(@name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
