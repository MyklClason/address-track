<%= form_for @name, :html => { :class => "form-horizontal name" } do |f| %>

  <% if @name.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@name.errors.count, "error") %> prohibited this name from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @name.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first) %>
  </div>
  <div class="form-group">
    <%= f.label :last, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last) %>
  </div>
  <div class="form-group">
    <%= f.label :middle, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :middle, :class => 'form-control' %>
    </div>
    <%=f.error_span(:middle) %>
  </div>
  <div class="form-group">
    <%= f.label :prefix, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :prefix, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prefix) %>
  </div>
  <div class="form-group">
    <%= f.label :suffix, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :suffix, :class => 'form-control' %>
    </div>
    <%=f.error_span(:suffix) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                names_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
