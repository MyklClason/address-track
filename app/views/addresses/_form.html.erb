<%= form_for @address, :html => { :class => "form-horizontal address" } do |f| %>

  <% if @address.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :address1, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address1, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address1) %>
  </div>
  <div class="form-group">
    <%= f.label :address2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address2, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address2) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :zip, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :zip, :class => 'form-control' %>
    </div>
    <%=f.error_span(:zip) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country) %>
  </div>
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :latitude, :class => 'form-control' %>
    </div>
    <%=f.error_span(:latitude) %>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :longitude, :class => 'form-control' %>
    </div>
    <%=f.error_span(:longitude) %>
  </div>
  <div class="form-group">
    <%= f.label :map_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :map_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:map_url) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
